@{
    Layout = null;
}
@using System.EnterpriseServices

<!DOCTYPE html>
<html ng-app="tourOperatorApp">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>"Index"</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular-route.min.js"></script>
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <div class="logo">
            <div class="col-sm-4">
                <img class="logo-img" src="~/Content/images/logo.png" height="70"/>
                <label>Amazing travel</label>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="col-sm-3 col-md-2" style="padding: 0 !important;">
            <div class="menu">
                <ul id="navbar" class="nav nav-pills nav-stacked">
                    <li id="newUser">
                        <a href="/#/user/">Новый пользователь</a>
                    </li>
                    <li id="allUsers">
                        <a href="/#/users/">Все пользователи</a>
                    </li>
                    <li id="newCustomer">
                        <a href="/#/customer/">Новый клиент</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-sm-9 col-md-10" style="padding-left: 25px !important;">
            <div ng-view></div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/controllers")
</body>
</html>
