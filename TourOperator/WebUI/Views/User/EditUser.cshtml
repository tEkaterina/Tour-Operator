@using System.Web.Script.Serialization
@model WebUI.Models.UserModel
@{
    var jsonModel = new JavaScriptSerializer().Serialize(@Model);
    var isUserAdmin = new JavaScriptSerializer().Serialize(@Model.Roles.Contains("ADMIN"));
}
<div class="row">
    <form class="form-horizontal" ng-controller="userController" ng-submit="save()" data-ng-init="fillForm(@jsonModel, @isUserAdmin)">
        @Html.Partial("UserEditForm", false)
        <div class="form-group">
            <div class="col-sm-offset-5 col-sm-7">
                <button type="submit" class="btn btn-default" style="margin-top: 15px;">Сохранить</button>
            </div>
        </div>
    </form>
</div>
