@using System.Web.Script.Serialization
@model WebUI.Models.CustomerModel
@{
    var jsonModel = new JavaScriptSerializer().Serialize(@Model);
}
<div class="row">
    <form class="form-horizontal" ng-controller="customerController" ng-submit="save()" data-ng-init="fillForm(@jsonModel)">
        @Html.Partial("CustomerEditForm")
        <hr/>
        <div class="form-group" id="submitButton">
            <div class="col-sm-offset-5 col-sm-7">
                <button type="submit" class="btn btn-default" style="margin-top: 15px;">Сохранить</button>
            </div>
        </div>
    </form>
</div>

